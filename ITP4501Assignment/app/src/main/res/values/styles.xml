<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/your_primary_color</item>
        <item name="colorPrimaryVariant">@color/your_primary_variant_color</item>
        <item name="colorOnPrimary">@color/your_on_primary_color</item>
        <item name="colorSecondary">@color/your_secondary_color</item>
        <item name="colorSecondaryVariant">@color/your_secondary_variant_color</item>
        <item name="colorOnSecondary">@color/your_on_secondary_color</item>
    </style>

    <!-- Define FilledTonalButton style -->
    <style name="Widget.MaterialComponents.Button.FilledTonalButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/your_button_background_color</item>
        <item name="android:textColor">@color/your_button_text_color</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>